<UserControl x:Class="OffByOne.Ql.Resources.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OffByOne.Ql.Resources"
             mc:Ignorable="d" d:DesignWidth="300" Height="60" Margin="0,20">
    <Grid HorizontalAlignment="Left" Height="80" VerticalAlignment="Top" Width="300" Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Label Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Height="26" Width="300"/>
        <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="300" Grid.Row="2" Margin="0,2,0,0"/>
    </Grid>
</UserControl>
